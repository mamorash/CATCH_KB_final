<h2>Showing all genes:</h2>

<table border="1";style="table-layout: fixed; width:100%">
<tr>
	<th> gene </th>
	<th> variant </th>
	<th> family name </th>
	<th> HGNC ID </th>
	<th> KEGG link </th>
	<th> GWAS link </th>
	<th> PharmGKB link </th>
</tr>
	<% @genes.each do |gene| %>
		<tr>
			<td> <%= gene.gene_name %> </td>
			<td> <%= gene.variant_list %> </td>
			<td> <%= gene.family_name_1 %> </td>
			<td> <%= gene.family_id_1 %> </td>
			<td style="word-wrap: break-word"> <%= gene.kegg_link %> </td>
			<td style="word-wrap: break-word"> <%= gene.gwas_link %> </td>
			<td style="word-wrap: break-word"> <%= gene.pharm_link %> </td>
		</tr>
		<tr>
			<% if gene.family_name_2!=nil %> 
				<td> </td>
				<td> </td>
				<td> <%= gene.family_name_2 %> </td>
				<td> <%= gene.family_id_2 %> </td>
				<td> </td>
				<td> </td>
				<td> </td>
			<% end %>
		</tr>
		<tr>
			<% if gene.family_name_3!=nil %> 
				<td> </td>
				<td> </td>
				<td> <%= gene.family_name_3 %> </td>
				<td> <%= gene.family_id_3 %> </td>
				<td> </td>
				<td> </td>
				<td> </td>
			<% end %>
		</tr>
		<tr>
			<% if gene.family_name_4!=nil %> 
				<td> </td>
				<td> </td>
				<td> <%= gene.family_name_4 %> </td>
				<td> <%= gene.family_id_4 %> </td>
				<td> </td>
				<td> </td>
				<td> </td>
			<% end %>
		</tr>
	<% end %>
</table>

 
